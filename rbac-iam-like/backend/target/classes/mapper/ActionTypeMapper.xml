<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aitech.rbac.mapper.ActionTypeMapper">
    
    <!-- Find All Action Types -->
    <select id="findAll" resultType="com.aitech.rbac.model.ActionType">
        SELECT * FROM action_types
    </select>

    <!-- Find Action Type by ID -->
    <select id="findById" resultType="com.aitech.rbac.model.ActionType">
        SELECT * FROM action_types WHERE action_type_id = #{id}
    </select>

    <!-- Insert Action Type -->
    <insert id="insert" parameterType="com.aitech.rbac.model.ActionType">
        INSERT INTO action_types(action_type_id, action_key, description)
        VALUES(#{actionTypeId}, #{actionKey}, #{description})
    </insert>

    <!-- Update Action Type -->
    <update id="update" parameterType="com.aitech.rbac.model.ActionType">
        UPDATE action_types
        SET action_key = #{actionKey},
            description = #{description}
        WHERE action_type_id = #{actionTypeId}
    </update>

    <!-- Delete Action Type -->
    <delete id="delete">
        DELETE FROM action_types WHERE action_type_id = #{id}
    </delete>

</mapper>
