<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aitech.rbac.mapper.RolePermissionMapper">
    
    <!-- Insert Role Permission -->
    <insert id="insert" parameterType="com.aitech.rbac.model.RolePermission">
        INSERT INTO role_permissions(role_id, permission_id, assigned_at)
        VALUES(#{roleId}, #{permissionId}, #{assignedAt})
    </insert>

    <!-- Delete Role Permission -->
    <delete id="delete" parameterType="com.aitech.rbac.model.RolePermission">
        DELETE FROM role_permissions
        WHERE role_id = #{roleId} AND permission_id = #{permissionId}
    </delete>

    <!-- Find by Role ID -->
    <select id="findByRoleId" resultType="com.aitech.rbac.model.RolePermission">
        SELECT * FROM role_permissions WHERE role_id = #{roleId}
    </select>

    <!-- Find All Role Permissions -->
    <select id="findAll" resultType="com.aitech.rbac.model.RolePermission">
        SELECT * FROM role_permissions
    </select>

</mapper>
